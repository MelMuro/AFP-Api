{
	"name": "afp-api",
	"version": "1.0.0",
	"description": "AFP API sample",
	"main": "index.ts",
	"scripts": {
		"test": "set NODE_ENV=test& jest  --detectOpenHandles --no-cache",
    "build": "npx tsc",
    "start": "node dist/indexjs",
    "dev": "set NODE_ENV=development& ts-node-dev src/index.ts"
	},
	"author": "Mel Muro",
	"license": "ISC",
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "preset": "ts-jest",
    "setupFiles": [
      "dotenv/config"
    ],
    "collectCoverage": true,
    "coverageReporters": [
      "text",
      "html"
    ],
    "coverageDirectory": "<rootDir>/coverage/"
  },
	"dependencies": {
		"dotenv": "^16.4.5",
		"express": "^4.19.2",
		"mongodb": "^6.5.0"
	},
	"devDependencies": {
		"@types/cors": "^2.8.17",
		"@types/express": "^4.17.21",
		"@types/node": "^20.12.7",
		"@typescript-eslint/eslint-plugin": "^7.7.1",
		"@typescript-eslint/parser": "^7.7.1",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"prettier": "^3.2.5",
		"ts-node-dev": "^2.0.0",
		"typescript": "^5.4.5",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.2.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.2"
	}
}
